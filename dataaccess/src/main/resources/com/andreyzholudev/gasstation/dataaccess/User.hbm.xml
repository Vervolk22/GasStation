<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.andreyzholudev.gasstation.dataaccess.entities.User" table="user">
        <meta attribute="class-description">
            This class contains the User credentials.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="username" column="username" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="enabled" column="enabled" type="boolean"/>
        <property name="accountNonExpired" column="accountNonExpired" type="boolean"/>
        <property name="credentialsNonExprired" column="credentialsNonExpired" type="boolean"/>
        <property name="accountNonLocked" column="accountNonLocked" type="boolean"/>
        <set name="authorities" table="user_authority">
            <key column="user_id"/>
            <many-to-many column="authority_id" class="com.andreyzholudev.gasstation.dataaccess.entities.Authority"/>
        </set>
    </class>

    <class name="com.andreyzholudev.gasstation.dataaccess.entities.Authority" table="authority">
        <meta attribute="class-description">
            This class contains authorities of site.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="role" column="role" type="string"/>
    </class>

</hibernate-mapping>